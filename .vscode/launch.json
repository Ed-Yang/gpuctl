{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "gpuctl: basic",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gpuctl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--fan", "30",
                "-v"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "gpuctl: slots",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gpuctl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--slots", "0000:0a:00.0", "--list"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "gpuctl: rate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gpuctl/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--temp", "55", "--tas", "./scripts/restart.sh", 
                "--rms", "./scripts/rate.sh",
                "--rate", "30000", "--ras", "./scripts/restart.sh", "-v",
                "--rate-cdown", "10", "--temp-cdown", "10"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "gpuctl: notification",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gpuctl/main.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python",
            "args": [
                "-v",
                "--fan",
                "70",
                "--temp",
                "10",
                "--tas",
                "./scripts/restart.sh",
                "--curve",
                "0:10/80:100"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DISPLAY": ":0",
                "NO_AT_BRIDGE": "1",
                "XAUTHORITY":"/var/run/lightdm/edward/:0",
                "DRYRUN":"1"
            }
        }
    ]
}